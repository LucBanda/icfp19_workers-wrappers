    "version": "0.2.0",
    "configurations": [


    {
        "type": "lldb",
        "request": "custom",
        "name": "Orderer",
        "targetCreateCommands": [
            "target create ${workspaceFolder}/build/orderer"
        ],

        "processCreateCommands": [
            "settings set target.run-args value1 value2 value3",
            "process launch"
        ]

    },
    {
        "type": "lldb",
        "request": "custom",
        "name": "optimizer",
        "targetCreateCommands": [
            "target create ${workspaceFolder}/build/optimizer"
        ],

        "processCreateCommands": [
            "settings set target.run-args value1 value2 value3",
            "process launch"
        ]

    },
    {
        "type": "lldb",
        "request": "custom",
        "name": "viz",
        "targetCreateCommands": [
            "target create ${workspaceFolder}/build/viz_ww"
        ],

        "processCreateCommands": [
            "settings set target.run-args value1 value2 value3",
            "process launch"
        ]

    },

